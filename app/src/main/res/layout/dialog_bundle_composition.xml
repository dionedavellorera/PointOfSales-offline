<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/partial_header"
        android:id="@+id/header"/>
    <FrameLayout
        android:layout_below="@id/header"
        android:id="@+id/frameSelection1"
        android:layout_margin="20dp"
        android:background="@drawable/layout_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:layout_margin="5dp"
            android:id="@+id/listSelectedProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <TextView
        android:padding="3dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/header"
        android:text="PRODUCTS SELECTED"
        android:background="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:layout_margin="20dp"
        android:layout_below="@id/frameSelection1"
        android:id="@+id/listMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:layout_below="@id/listMenu"
        android:id="@+id/frameSelection"
        android:layout_margin="20dp"
        android:background="@drawable/layout_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:layout_margin="5dp"
            android:layout_below="@id/listMenu"
            android:id="@+id/listProducts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <TextView
        android:id="@+id/selectionTitle"
        android:padding="3dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/listMenu"
        android:text="TITLE TITLE TITLE TITLE TITLE TITLE"
        android:background="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.design.widget.FloatingActionButton
        android:layout_margin="10dp"
        android:src="@mipmap/baseline_arrow_back_black_24"
        android:id="@+id/backButtonNavigation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <android.support.design.widget.FloatingActionButton
        android:layout_margin="10dp"
        android:src="@mipmap/baseline_arrow_right_alt_black_24"
        android:id="@+id/nextButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>