<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/partial_header" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RATES"
            android:textStyle="italic"
            android:padding="10dp"/>


        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/spinnerRates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GUEST TYPE"
            android:textStyle="italic"
            android:padding="10dp"/>



        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/spinnerGuestType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CAR"
            android:textStyle="italic"
            android:padding="10dp"/>


        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/spinnerCar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VEHICLE"
            android:textStyle="italic"
            android:padding="10dp"/>



        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/spinnerVehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CUSTOMER"
            android:textStyle="italic"
            android:padding="10dp"/>


        <EditText
            android:id="@+id/customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Customer"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PLATE NUMBER"
            android:textStyle="italic"
            android:padding="10dp"/>



        <EditText
            android:hint="Plate number"
            android:id="@+id/plateNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STEWARD"
            android:textStyle="italic"
            android:padding="10dp"/>

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/steward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ROOM AREA"
            android:textStyle="italic"
            android:padding="10dp"/>


        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/roomArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NATIONALITY"
            android:textStyle="italic"
            android:padding="10dp"/>


        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/spinnerNationalirt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GUEST COUNT"
            android:textStyle="italic"
            android:padding="10dp"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilAdult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:hint="Adult count"
                android:id="@+id/adult"
                android:inputType="number"
                android:text="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilChild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:hint="Child count"
                android:id="@+id/child"
                android:inputType="number"
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/checkin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHECK IN"
            />
    </LinearLayout>



    </ScrollView>
</LinearLayout>

